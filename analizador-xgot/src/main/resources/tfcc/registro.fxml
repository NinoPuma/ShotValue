<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.shotvalue.analizador_xgot.front.RegistroController"
           style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);">

    <VBox alignment="CENTER" spacing="12.0"
          prefHeight="450.0" prefWidth="600.0"
          maxWidth="700.0" maxHeight="600.0"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 0);">

        <children>
            <ImageView fitWidth="150" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../img/logo.png" />
                </image>
            </ImageView>

            <Separator prefWidth="200"/>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Crear Cuenta" />

            <TextField fx:id="usernameField" promptText="Introduce tu nombre de usuario" maxWidth="300"/>

            <Label text="Correo electrónico:" />
            <TextField fx:id="emailField" promptText="Introduce tu correo" maxWidth="300"/>

            <Label text="Contraseña:" />
            <PasswordField fx:id="passwordField" promptText="Introduce una contraseña" maxWidth="300"/>

            <Label text="Repite la contraseña:" />
            <PasswordField fx:id="repeatPasswordField" promptText="Confirma la contraseña" maxWidth="300"/>

            <CheckBox fx:id="termsCheckBox" text="Acepto los términos y condiciones" maxWidth="300"/>

            <Button text="Registrarse" onAction="#handleRegister"
                    maxWidth="150"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />

            <Label fx:id="messageLabel" textFill="red" />

            <Hyperlink text="¿Ya tienes cuenta? Inicia sesión" onAction="#goToLogin"
                       style="-fx-text-fill: #0078D7;" />
        </children>

        <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
        </padding>
    </VBox>
</StackPane>