<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.CrearEquipoController"
            style="-fx-background-color: #262626;">

    <center>
        <VBox alignment="CENTER"
              spacing="20"
              maxWidth="600"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Logo (más arriba, pero no pegado) -->
            <ImageView fitWidth="200" preserveRatio="true">
                <image>
                    <Image url="@/img/ShotValue.png"/>
                </image>
            </ImageView>

            <!-- Título -->
            <Label text="Crear Equipo"
                   style="-fx-text-fill:white;
                          -fx-font-size:32px;
                          -fx-font-weight:bold;"/>

            <!-- Formulario -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Nombre:"
                       style="-fx-text-fill:white;
                              -fx-font-size:14px;
                              -fx-font-weight:bold;"/>

                <TextField fx:id="nameField"
                           promptText="Nombre del equipo"
                           maxWidth="300"
                           prefWidth="300"/>

                <!-- Botones -->
                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="guardarBtn" text="Guardar"
                            style="-fx-background-color:#00C29A;
                                   -fx-text-fill:white;
                                   -fx-font-weight:bold;
                                   -fx-pref-width:140;
                                   -fx-pref-height:40;"/>
                    <Button fx:id="limpiarBtn" text="Limpiar"
                            style="-fx-background-color:transparent;
                                   -fx-text-fill:white;
                                   -fx-border-color:white;
                                   -fx-pref-width:140;
                                   -fx-pref-height:40;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
