<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.shotvalue.analizador_xgot.controller.InicioController"
           style="-fx-background-color: #2E2E2E;">

    <VBox spacing="30" alignment="TOP_CENTER" maxWidth="1200"
          style="-fx-padding: 30;">

        <!-- Header centrado -->
        <HBox alignment="CENTER" spacing="20">
            <ImageView fitWidth="120" preserveRatio="true">
                <image><Image url="@../img/logo.png"/></image>
            </ImageView>
            <Label fx:id="bienvenidaLabel"
                   text="¡Bienvenido!"
                   style="-fx-text-fill: white; -fx-font-size: 24px;"/>
        </HBox>

        <!-- Estadísticas rápidas -->
        <GridPane hgap="20" vgap="20" maxWidth="900">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>

            <children>
                <VBox style="-fx-background-color: #1F1F1F; -fx-padding: 15; -fx-background-radius: 8;"
                      alignment="CENTER">
                    <Label text="Equipos" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="equiposCount" style="-fx-text-fill: #0F7F7F; -fx-font-size: 24px;"/>
                </VBox>
                <VBox GridPane.columnIndex="1" style="-fx-background-color: #1F1F1F; -fx-padding: 15; -fx-background-radius: 8;"
                      alignment="CENTER">
                    <Label text="Partidos" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="partidosCount" style="-fx-text-fill: #0F7F7F; -fx-font-size: 24px;"/>
                </VBox>
                <VBox GridPane.columnIndex="2" style="-fx-background-color: #1F1F1F; -fx-padding: 15; -fx-background-radius: 8;"
                      alignment="CENTER">
                    <Label text="Disparos" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="shotsCount" style="-fx-text-fill: #0F7F7F; -fx-font-size: 24px;"/>
                </VBox>
                <VBox GridPane.columnIndex="3" style="-fx-background-color: #1F1F1F; -fx-padding: 15; -fx-background-radius: 8;"
                      alignment="CENTER">
                    <Label text="xG total" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="xgTotal" style="-fx-text-fill: #0F7F7F; -fx-font-size: 24px;"/>
                </VBox>
            </children>
        </GridPane>

        <!-- Acciones rápidas -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnCrearTiro" text="Registrar evento" prefWidth="140" style="-fx-background-color: #2980B9; -fx-text-fill: white;"/>
            <Button fx:id="btnCrearJugador" text="Crear jugador" prefWidth="140" style="-fx-background-color: #D35400; -fx-text-fill: white;"/>
            <Button fx:id="btnCrearEquipo" text="Crear equipo" prefWidth="140" style="-fx-background-color: #16A085; -fx-text-fill: white;"/>
            <Button fx:id="btnVisualizar" text="Visualizar datos" prefWidth="140" style="-fx-background-color: #8E44AD; -fx-text-fill: white;"/>
            <Button fx:id="btnPerfil" text="Perfil" prefWidth="140" style="-fx-background-color: #D35400; -fx-text-fill: white;"/>
        </HBox>

        <!-- Últimos vistos -->
        <VBox spacing="10" alignment="TOP_LEFT" maxWidth="900">
            <Label text="Recientes" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <ListView fx:id="recentsList" prefHeight="150"/>
        </VBox>
    </VBox>
</StackPane>
