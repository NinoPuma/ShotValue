<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.AyudaController"
            styleClass="content-pane"
            style="-fx-background-color: #F4F4F4;">

    <!-- Título principal centrado -->
    <top>
        <VBox spacing="10" alignment="CENTER"
              style="-fx-padding: 20; -fx-background-color: #1F1F1F;">
            <Label text="Conceptos principales y preguntas frecuentes"
                   alignment="CENTER"
                   maxWidth="Infinity"
                   style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <GridPane hgap="30" vgap="20" style="-fx-padding: 30;" maxWidth="1100">
            <columnConstraints>
                <!-- Primera columna 40% ancho, crece siempre -->
                <ColumnConstraints percentWidth="40" hgrow="ALWAYS"/>
                <!-- Segunda columna 60% ancho, crece siempre -->
                <ColumnConstraints percentWidth="60" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Panel izquierdo: lista sin color de fondo -->
            <VBox GridPane.columnIndex="0"
                  alignment="CENTER"
                  spacing="10"
                  VBox.vgrow="ALWAYS"
                  style="-fx-padding: 10;">
                <Label text="Menú"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ListView fx:id="faqList"
                          prefHeight="400"
                          fixedCellSize="80"
                          style="-fx-font-size: 18px;"
                          VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Panel derecho: contenido -->
            <VBox fx:id="faqContentBox"
                  GridPane.columnIndex="1"
                  spacing="15"
                  alignment="TOP_LEFT"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #DDDDDD; -fx-border-width: 1;">
                <Label fx:id="faqTitle"
                       wrapText="true"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label fx:id="faqContent"
                       wrapText="true"
                       style="-fx-font-size: 16px; -fx-line-spacing: 1.4;" />
            </VBox>
        </GridPane>
    </center>
</BorderPane>
