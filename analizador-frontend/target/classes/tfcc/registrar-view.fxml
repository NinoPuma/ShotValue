<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.RegistrarTiroController"
            style="-fx-background-color: #2E2E2E;">

    <!-- ────────── ENCABEZADO ────────── -->
    <top>
        <!-- Aquí podrías poner tu barra superior, iconos, etc. -->
    </top>

    <!-- ────────── CENTRO: FORMULARIO DE REGISTRO DE TIRO ────────── -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- ==== TÍTULO DE LA SECCIÓN ==== -->
            <Label text="Registrar nuevo tiro"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

            <!-- ==== GRID CON ETIQUETAS Y CONTROLES ==== -->
            <GridPane hgap="15" vgap="10" alignment="CENTER">
                <columnConstraints>
                    <!-- 5 columnas del 20% c/u -->
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                </columnConstraints>

                <!-- ─ FILA 0: ETIQUETAS ─ -->
                <Label text="Equipo"    textFill="white" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Jugador"   textFill="white" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Minutos"   textFill="white" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label text="Tercio"    textFill="white" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Label text="Carril"    textFill="white" GridPane.columnIndex="4" GridPane.rowIndex="0"/>

                <!-- ─ FILA 1: CONTROLES ─ -->
                <ComboBox fx:id="equipoBox"   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="jugadorBox"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <HBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Spinner fx:id="minuteFromSpinner" prefWidth="60"/>
                    <Label text="a" textFill="white"/>
                    <Spinner fx:id="minuteToSpinner" prefWidth="60"/>
                </HBox>

                <ComboBox fx:id="thirdBox"    GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <ComboBox fx:id="laneBox"     GridPane.columnIndex="4" GridPane.rowIndex="1"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Label text="Área"           textFill="white"/>
                <ComboBox fx:id="areaBox"/>

                <Label text="Situación"      textFill="white"/>
                <ComboBox fx:id="situationBox"/>

                <Label text="Parte del cuerpo" textFill="white"/>
                <ComboBox fx:id="bodyPartBox"/>

                <Label text="Acción previa" textFill="white"/>
                <ComboBox fx:id="preActionBox"/>

                <Label text="Resultado"     textFill="white"/>
                <ComboBox fx:id="resultBox"/>
            </HBox>

            <!-- ==== BOTÓN GUARDAR ==== -->
            <HBox alignment="CENTER">
                <Button fx:id="guardarBtn" text="Guardar tiro"
                        style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 8 20;"/>
            </HBox>

            <!-- ==== PANEL DE GRÁFICOS (CAMPO + ARCO) ==== -->
            <HBox spacing="25" alignment="TOP_CENTER">

                <!-- CANCHA + TIROS -->
                <VBox spacing="10" alignment="CENTER"
                      style="-fx-background-color: #1F1F1F; -fx-padding: 20; -fx-border-color: #444; -fx-border-width: 1;">
                    <Label text="Campo de juego"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <StackPane>
                        <!-- Cargamos la imagen de fondo -->
                        <ImageView fx:id="fieldMap" fitWidth="500" fitHeight="300" preserveRatio="true">
                            <image>
                                <Image url="@/img/field_placeholder.png"/>
                            </image>
                        </ImageView>
                        <!-- Canvas transparente encima para capturar clics y dibujar puntos -->
                        <Canvas fx:id="canvasTiros" width="500" height="300"/>
                    </StackPane>

                    <!-- Ahora mostramos dos campos: ánguloX y ánguloY -->
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Ángulo X:" textFill="white"/>
                        <TextField fx:id="angleXFieldCampo" prefWidth="80" editable="false"/>
                        <Label text="Ángulo Y:" textFill="white"/>
                        <TextField fx:id="angleYFieldCampo" prefWidth="80" editable="false"/>
                    </HBox>
                </VBox>

                <!-- ARCO -->
                <VBox spacing="10" alignment="CENTER"
                      style="-fx-background-color: #1F1F1F; -fx-padding: 20; -fx-border-color: #444; -fx-border-width: 1;">
                    <Label text="Vista frontal del arco"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <StackPane>
                        <!-- Imagen de fondo del arco -->
                        <ImageView fx:id="goalView" fitWidth="500" fitHeight="150" preserveRatio="true">
                            <image>
                                <Image url="@/img/goal_placeholder.png"/>
                            </image>
                        </ImageView>
                        <!-- Canvas encima para capturar clics y dibujar -->
                        <Canvas fx:id="canvasArco" width="500" height="150"/>
                    </StackPane>

                    <!-- Campos de ángulo X e Y para el arco -->
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Ángulo X:" textFill="white"/>
                        <TextField fx:id="angleXFieldArco" prefWidth="80" editable="false"/>
                        <Label text="Ángulo Y:" textFill="white"/>
                        <TextField fx:id="angleYFieldArco" prefWidth="80" editable="false"/>
                    </HBox>
                </VBox>
            </HBox>

        </VBox>
    </center>
</BorderPane>
