<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21.0.7"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.shotvalue.analizador_xgot.controller.EquiposController"
      spacing="20"
      style="-fx-background-color: #2E2E2E; -fx-padding: 20;">

    <!-- Selección de equipo y búsqueda -->
    <HBox spacing="15">
        <Label text="Equipo" textFill="white"/>
        <ComboBox fx:id="equipoSelector" prefWidth="200"/>
        <Label text="Buscar jugador" textFill="white"/>
        <TextField fx:id="jugadorSearchField"
                   promptText="Buscar por nombre o apellido"
                   prefWidth="200"/>
    </HBox>

    <!-- Tabla de jugadores, bajada 20px -->
    <TableView fx:id="playerTable" prefHeight="350">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </TableView>

</VBox>
