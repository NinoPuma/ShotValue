<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.shotvalue.analizador_xgot.controller.LoginController"
           style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);">

   <VBox alignment="CENTER" spacing="20"
         maxWidth="500" maxHeight="550"
         style="-fx-background-color: white; -fx-background-radius: 16;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.3, 0, 4);
                -fx-padding: 40;">

      <ImageView fx:id="logoImage" fitWidth="130" preserveRatio="true">
         <image>
            <Image url="@../img/ShotValue.png" />
         </image>
      </ImageView>

      <Label text="Iniciar Sesión"
             style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

      <TextField fx:id="usernameField" promptText="Correo electrónico"
                 maxWidth="320"
                 style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />

      <StackPane alignment="CENTER_RIGHT" maxWidth="320">
         <PasswordField fx:id="passwordField" promptText="Contraseña"
                        maxWidth="Infinity"
                        style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />
         <TextField fx:id="passwordTextField" promptText="Contraseña"
                    visible="false" managed="false" maxWidth="Infinity"
                    style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />
         <Button fx:id="togglePasswordBtn" onAction="#togglePasswordVisibility"
                 StackPane.alignment="CENTER_RIGHT"
                 style="-fx-background-color: transparent; -fx-padding: 0 5 0 0;">
            <graphic>
               <ImageView fx:id="togglePasswordIcon" fitWidth="20" fitHeight="20">
                  <image>
                     <Image url="@../img/contraseña.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </StackPane>

      <CheckBox fx:id="rememberMeCheckBox" text="Recordar sesión"
                style="-fx-font-size: 12px; -fx-text-fill: #34495e;" />

      <Button text="Entrar" onAction="#handleLogin" maxWidth="180"
              style="-fx-background-color: #27ae60; -fx-text-fill: white;
                     -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;" />

      <Label fx:id="messageLabel" textFill="red" style="-fx-font-size: 12px;" />

      <Hyperlink text="¿No tenés cuenta? Registrate"
                 onAction="#goToRegister"
                 style="-fx-font-size: 13px; -fx-text-fill: #2980b9;" />

   </VBox>
</StackPane>
