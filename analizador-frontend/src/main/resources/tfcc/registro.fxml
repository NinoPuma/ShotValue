<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.shotvalue.analizador_xgot.controller.RegistroController"
           style="-fx-background-color: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);">

    <VBox alignment="CENTER" spacing="20"
          maxWidth="520" maxHeight="600"
          style="-fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.3, 0, 4);
                 -fx-padding: 40;">

        <ImageView fx:id="logoImage" fitWidth="130" preserveRatio="true">
            <image>
                <Image url="@../img/logo.png" />
            </image>
        </ImageView>

        <Label text="Crear cuenta"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <TextField fx:id="usernameField" promptText="Nombre de usuario"
                   maxWidth="320"
                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />

        <TextField fx:id="emailField" promptText="Correo electrónico"
                   maxWidth="320"
                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />

        <PasswordField fx:id="passwordField" promptText="Contraseña"
                       maxWidth="320"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />

        <PasswordField fx:id="repeatPasswordField" promptText="Repetir contraseña"
                       maxWidth="320"
                       style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 8;" />

        <CheckBox fx:id="termsCheckBox" text="Acepto los términos y condiciones" />

        <Label fx:id="messageLabel" textFill="red" style="-fx-font-size: 12px;" />

        <Button text="Registrarse" fx:id="registrarBtn"
                style="-fx-background-color: #0078D7; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-background-radius: 8;"
                maxWidth="180" />

        <Hyperlink text="¿Ya tenés cuenta? Iniciar sesión" onAction="#goToLogin"
                   style="-fx-font-size: 13px; -fx-text-fill: #2980b9;" />

    </VBox>
</StackPane>
