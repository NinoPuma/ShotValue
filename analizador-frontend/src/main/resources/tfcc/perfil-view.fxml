<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.PerfilController"
            style="-fx-background-color: #262626;">  <!-- fondo oscuro -->

    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Logo aumentado y centrado -->
            <ImageView fitWidth="250" preserveRatio="true">
                <image>
                    <Image url="@../img/ShotValue.png"/>
                </image>
            </ImageView>

            <!-- Tarjeta blanca con drop-shadow -->
            <VBox spacing="20"
                  alignment="CENTER"
                  style="-fx-padding: 20;
                         -fx-background-color: white;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,3);"
                  maxWidth="500">

                <!-- Formulario unificado -->
                <GridPane hgap="15" vgap="12" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                        <ColumnConstraints halignment="LEFT"  minWidth="300"/>
                    </columnConstraints>

                    <!-- Nombre -->
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333;"/>
                    <TextField fx:id="usernameField"
                               promptText="Introduce tu nombre"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Email como Label no editable -->
                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333;"/>
                    <Label fx:id="emailLabel"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-text-fill: #555; -fx-font-weight: bold;"/>

                    <!-- Contraseña actual -->
                    <Label text="Contraseña actual:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333;"/>
                    <StackPane alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <PasswordField fx:id="currentPasswordField"
                                       promptText="●●●●●●"
                                       maxWidth="Infinity" />
                        <TextField fx:id="currentPasswordTextField" promptText="●●●●●●"
                                   visible="false" managed="false" maxWidth="Infinity" />
                        <Button fx:id="toggleCurrentPasswordBtn" onAction="#toggleCurrentPasswordVisibility"
                                StackPane.alignment="CENTER_RIGHT"
                                style="-fx-background-color: transparent; -fx-padding: 0 5 0 0;">
                            <graphic>
                                <ImageView fx:id="toggleCurrentPasswordIcon" fitWidth="20" fitHeight="20">
                                    <image>
                                        <Image url="@../img/contraseña.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </StackPane>

                    <!-- Nueva contraseña -->
                    <Label text="Nueva contraseña:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333;"/>
                    <StackPane alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <PasswordField fx:id="newPasswordField"
                                       promptText="●●●●●●"
                                       maxWidth="Infinity" />
                        <TextField fx:id="newPasswordTextField" promptText="●●●●●●"
                                   visible="false" managed="false" maxWidth="Infinity" />
                        <Button fx:id="toggleNewPasswordBtn" onAction="#toggleNewPasswordVisibility"
                                StackPane.alignment="CENTER_RIGHT"
                                style="-fx-background-color: transparent; -fx-padding: 0 5 0 0;">
                            <graphic>
                                <ImageView fx:id="toggleNewPasswordIcon" fitWidth="20" fitHeight="20">
                                    <image>
                                        <Image url="@../img/contraseña.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </StackPane>

                    <!-- Confirmar contraseña -->
                    <Label text="Confirmar contraseña:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                           style="-fx-text-fill: #333;"/>
                    <StackPane alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="●●●●●●"
                                       maxWidth="Infinity" />
                        <TextField fx:id="confirmPasswordTextField" promptText="●●●●●●"
                                   visible="false" managed="false" maxWidth="Infinity" />
                        <Button fx:id="toggleConfirmPasswordBtn" onAction="#toggleConfirmPasswordVisibility"
                                StackPane.alignment="CENTER_RIGHT"
                                style="-fx-background-color: transparent; -fx-padding: 0 5 0 0;">
                            <graphic>
                                <ImageView fx:id="toggleConfirmPasswordIcon" fitWidth="20" fitHeight="20">
                                    <image>
                                        <Image url="@../img/contraseña.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </StackPane>
                </GridPane>

                <!-- Botones -->
                <HBox spacing="12" alignment="CENTER">
                    <Button text="Guardar Cambios" fx:id="saveBtn"
                            style="-fx-background-color: #27AE60;
                                   -fx-text-fill: white;
                                   -fx-min-width: 120;"/>
                    <Button text="Cerrar Sesión" fx:id="logoutBtn"
                            style="-fx-background-color: #F39C12;
                                   -fx-text-fill: white;
                                   -fx-min-width: 120;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
