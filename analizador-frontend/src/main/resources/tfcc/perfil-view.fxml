<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.PerfilController"
            style="-fx-background-color: #F9FDFC;">

    <!-- Encabezado con logo -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 10 0;">
            <ImageView fitWidth="300" preserveRatio="true" pickOnBounds="true">
                <image>
                    <Image url="@../img/logo.png"/>
                </image>
            </ImageView>
        </VBox>
    </top>

    <!-- Cuerpo con formulario -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 0 40;" maxWidth="500">
            <!-- Datos de usuario -->
            <GridPane hgap="15" vgap="10" style="-fx-padding: 10; -fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8,0,0,2);">
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField"
                           promptText="Introduce tu nombre"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           maxWidth="400"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField"
                           editable="false"
                           style="-fx-opacity: 1;"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           maxWidth="400"/>
            </GridPane>

            <!-- Cambio de contraseña -->
            <VBox spacing="8" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8,0,0,2);" maxWidth="500">
                <Label text="Cambiar contraseña" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <PasswordField fx:id="currentPasswordField"
                               promptText="Contraseña actual"
                               maxWidth="400"/>
                <PasswordField fx:id="newPasswordField"
                               promptText="Nueva contraseña"
                               maxWidth="400"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Confirmar nueva contraseña"
                               maxWidth="400"/>
            </VBox>

            <!-- Botones debajo del formulario -->
            <HBox spacing="12" alignment="CENTER" style="-fx-padding: 10 0 20 0;">
                <Button text="Guardar Cambios" fx:id="saveBtn"
                        style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-min-width: 120;"/>
                <Button text="Cerrar Sesión" fx:id="logoutBtn"
                        style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-min-width: 120;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
