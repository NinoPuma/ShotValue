<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.CrearJugadorController"
            style="-fx-background-color: #262626;">

    <center>
        <VBox alignment="CENTER"
              spacing="20"
              maxWidth="600"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Logo (más arriba pero con margen) -->
            <ImageView fitWidth="200" preserveRatio="true">
                <image>
                    <Image url="@/img/ShotValue.png"/>
                </image>
            </ImageView>

            <!-- Título -->
            <Label text="Crear Jugador"
                   style="-fx-text-fill:white;
                          -fx-font-size:32px;
                          -fx-font-weight:bold;"/>

            <!-- Campos (formulario en VBox) -->
            <VBox spacing="15" alignment="CENTER">

                <Label text="Equipo:" style="-fx-text-fill:white;"/>
                <ComboBox fx:id="equipoBox"
                          promptText="Selecciona equipo"
                          maxWidth="300" prefWidth="300"/>

                <Label text="Nombre Completo:" style="-fx-text-fill:white;"/>
                <TextField fx:id="nombreField"
                           promptText="Ej: Lionel Messi"
                           maxWidth="300" prefWidth="300"/>

                <Label text="Número de Camiseta:" style="-fx-text-fill:white;"/>
                <TextField fx:id="dorsalField"
                           promptText="Ej: 10"
                           maxWidth="300" prefWidth="300"/>

                <Label text="Posición:" style="-fx-text-fill:white;"/>
                <ComboBox fx:id="posicionBox"
                          promptText="Selecciona posición"
                          maxWidth="300" prefWidth="300"/>
            </VBox>

            <!-- Botones -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="guardarBtn" text="Guardar"
                        style="-fx-background-color:#00C29A;
                               -fx-text-fill:white;
                               -fx-font-weight:bold;
                               -fx-pref-width:140;
                               -fx-pref-height:40;"/>
                <Button fx:id="limpiarBtn" text="Limpiar"
                        style="-fx-background-color:transparent;
                               -fx-text-fill:white;
                               -fx-border-color:white;
                               -fx-pref-width:140;
                               -fx-pref-height:40;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
