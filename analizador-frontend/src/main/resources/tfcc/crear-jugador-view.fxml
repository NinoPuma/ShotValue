<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shotvalue.analizador_xgot.controller.CrearJugadorController"
            style="-fx-background-color: #262626;">

    <center>
        <VBox alignment="CENTER"
              spacing="40"
              maxWidth="600">

        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Logo común: -->
        <ImageView fitWidth="200" preserveRatio="true">
            <image>
                <Image url="@/img/ShotValue.png"/>
            </image>
        </ImageView>

        <!-- Título común: -->
        <Label text="Crear Jugador"
               style="-fx-text-fill:white;
                      -fx-font-size:32px;
                      -fx-font-weight:bold;"/>

        <!-- Campos -->
        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints halignment="LEFT"  prefWidth="250"/>
            </columnConstraints>

            <Label text="Equipo:" style="-fx-text-fill:white;"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="equipoBox" promptText="Selecciona equipo"
                      prefWidth="250"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nombre Completo:" style="-fx-text-fill:white;"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nombreField" promptText="Ej: Lionel Messi"
                       prefWidth="250"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Número de Camiseta:" style="-fx-text-fill:white;"
                   prefWidth="100"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="dorsalField" promptText="Ej: 10"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Posición:" style="-fx-text-fill:white;"
                   prefWidth="250"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="posicionBox" promptText="Selecciona posición"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Botones -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="guardarBtn" text="Guardar"
                    style="-fx-background-color:#00C29A;
                           -fx-text-fill:white;
                           -fx-font-weight:bold;
                           -fx-pref-width:140;
                           -fx-pref-height:40;"/>
            <Button fx:id="limpiarBtn" text="Limpiar"
                    style="-fx-background-color:transparent;
                           -fx-text-fill:white;
                           -fx-border-color:white;
                           -fx-pref-width:140;
                           -fx-pref-height:40;"/>
        </HBox>
    </VBox>
    </center>
</BorderPane>
